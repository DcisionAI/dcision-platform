# DcisionAI Platform Configuration
# Copy this file to .env and update the values according to your environment

# =============================================================================
# Security Settings
# =============================================================================

# JWT secret key for authentication (REQUIRED)
# Generate using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-secure-jwt-secret-here

# Encryption key for sensitive data (REQUIRED)
# Generate using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=your-encryption-key-here

# =============================================================================
# OpenAI Configuration
# =============================================================================

# OpenAI API key (REQUIRED)
OPENAI_API_KEY=your-openai-api-key

# =============================================================================
# Supabase Configuration
# =============================================================================

# Supabase URL and keys (REQUIRED for database operations)
SUPABASE_URL=your-supabase-url
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-key

# =============================================================================
# Server Configuration
# =============================================================================

# Server port (default: 3000)
PORT=3000

# Base URL for the application (default: http://localhost:3000)
BASE_URL=http://localhost:3000

# Agno Backend URL (default: http://localhost:8000)
# For production deployments, set this to your deployed Agno backend service URL
AGNO_BACKEND_URL=http://localhost:8000

# Node environment (development/production)
NODE_ENV=development

# Logging level (debug/info/warn/error)
LOG_LEVEL=info

# =============================================================================
# Python Configuration
# =============================================================================

# Python executable path (default: python3)
PYTHON_PATH=python3

# Temporary directory for file operations (default: /tmp)
TEMP_DIR=/tmp

# =============================================================================
# Rate Limiting
# =============================================================================

# Maximum requests per minute per IP (default: 60)
RATE_LIMIT_MAX=60

# Rate limit window in minutes (default: 1)
RATE_LIMIT_WINDOW=1

# =============================================================================
# Optimization Service
# =============================================================================

# Maximum concurrent optimization jobs (default: 5)
MAX_CONCURRENT_JOBS=5

# Job timeout in minutes (default: 30)
JOB_TIMEOUT_MINUTES=30

# =============================================================================
# Development Settings
# =============================================================================

# Enable detailed error messages (true/false)
DEBUG=false

# Enable API request logging (true/false)
API_LOGGING=true

# Instructions:
# 1. Copy this file to .env
# 2. Replace JWT_SECRET with a secure random string
# 3. Adjust other values as needed for your environment
# 4. Never commit the actual .env file to version control 

# =============================================================================
# Airbyte Configuration
# =============================================================================

# Base URL for the Airbyte API (e.g. http://localhost:3000/connectors)
# Used by the front-end to proxy Airbyte requests
AIRBYTE_API_URL=http://localhost:3000/connectors

# (Optional) API key for Airbyte Enterprise, if enabled
# AIRBYTE_API_KEY=

# (Optional) Default workspace ID for Airbyte operations
# AIRBYTE_WORKSPACE_ID=