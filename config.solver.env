# Solver Service Configuration
# Copy this file to .env.solver for local solver service development

# =============================================================================
# Solver Service Configuration
# =============================================================================

# Service Configuration
NODE_ENV=production
PORT=8080

# Solver Configuration
SOLVER_TIMEOUT=300
HIGHS_THREADS=4
HIGHS_LOG_LEVEL=info

# OR-Tools Configuration
ORTOOLS_TIMEOUT=300
ORTOOLS_NUM_THREADS=4

# =============================================================================
# Production Deployment
# =============================================================================

# GCP Configuration
PROJECT_ID=dcisionai
REGION=us-central1
SERVICE_NAME=solver-service

# Domain Configuration
CUSTOM_DOMAIN=solver.dcisionai.com

# =============================================================================
# Resource Limits
# =============================================================================

# Memory and CPU limits for Cloud Run
MEMORY_LIMIT=2Gi
CPU_LIMIT=2
MAX_INSTANCES=10

# =============================================================================
# Monitoring and Logging
# =============================================================================

# Logging level (debug/info/warn/error)
LOG_LEVEL=info

# Health check configuration
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3

# =============================================================================
# Security
# =============================================================================

# CORS configuration
CORS_ORIGIN=*
CORS_METHODS=GET,POST,OPTIONS
CORS_HEADERS=Content-Type,Authorization

# Rate limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60

# =============================================================================
# Instructions
# =============================================================================

# 1. Copy this file to .env.solver
# 2. Update PROJECT_ID with your GCP project ID
# 3. Deploy using: ./scripts/deploy-solver.sh
# 4. Test the service: curl https://solver.dcisionai.com/health 